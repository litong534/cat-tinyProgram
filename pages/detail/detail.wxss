/* pages/detail/detail.wxss */
.img-container {
  width: 100%;
  height: 0;
  padding-top: 200px;
  overflow: hidden;
  position: relative;
}

.img-header {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.title-header {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 30px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,0.6);
}

.title {
  font-size: 14px;
  color: #fff;
}

.article_body {
  width: 95%;
  margin: 0 auto;
}
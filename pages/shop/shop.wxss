/* pages/shop/shop.wxss */

.home {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  background: #f5f4f9;
  overflow-x: hidden;
}

.section {
  width: 100%;
  height: 40px;
  padding: 0 5px 5px 5px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}

.search {
  width: 80%;
  height: 100%;
  background: #f5f4f9;
  border-radius: 5px;
  font-size: 12px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.search_icon {
  height: 20px;
  width: 20px;
  margin: 0 10px;
}

.cart_icon {
  height: 25px;
  width: 25px;
  margin-right: 10px;
}

.search_input {
  background: transparent;
}

.swiper {
  width: 100%;
  height: 200px;
}

.sw {
  height: 100%;
}

.swiper .slide-image {
  width: 100%;
}

.category {
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.cate {
  width: 25%;
}

.panel {
  margin-top: 10px;
  background: #fff;
  width: 100%;
}

.cart {
  position: relative;
}

.bubble {
  position: absolute;
  font-size: 20rpx;
  background: #f55b51;
  border-radius: 16rpx;
  padding: 0 8rpx;
  top: 0;
  right: 10rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
/**index.wxss**/

.home {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.swiper {
  width: 100%;
  height: 200px;
}

.sw {
  height: 100%;
}

.swiper .slide-image {
  width: 100%;
}

.category {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.article {
  width: 100%;
}

.label {
  border-left: 4px solid #f65;
  font-size: 15px;
  background: rgba(255, 102, 85, 0.4);
  width: 100%;
}

.loading {
  width: 100%;
  padding: 5px 0;
  text-align: center;
  background: rgba(0,0,0,0.3);
  font-size: 12px;
  color: #fff;
}
/* components/productbar/productbar.wxss */
.bar {
  width: 100%;
  height: 60px;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  font-size: 16px;
  background: #fff;
}
.pricepanel {
  flex: 1;
  height: inherit;
  display: flex;
  align-items: center;
  padding: 10px;
  box-sizing: border-box;
}
.btn {
  width: 120px;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f55b50;
}

.charge {
  color: #fff;
}

.price {
  color: #f55b50;
  margin-left: 10px;
}
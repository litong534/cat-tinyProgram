/* components/productbar/productbar.wxss */
.bar {
  width: 100%;
  height: 60px;
  display: flex;
  background: #fff;
}

.btn {
  flex: 1;
  height: inherit;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;  
}

.icon {
  width: 20px;
  height: 20px;
  margin-bottom: 5px;
}

.iconfont {
  font-size: 14px;
}

.btn_group {
  width: 60%;
  height: inherit;
  display: flex;
}

.btng {
  flex: 1;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
}

.intocart {
  background-color: #f55b51;
  color: #fff;
}

.cart {
  position: relative;
}

.bubble {
  position: absolute;
  font-size: 22rpx;
  background: #f55b51;
  border-radius: 20rpx;
  padding: 0 10rpx;
  top: 4rpx;
  right: 4rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* components/cartcard/cartcard.wxss */

.panel {
  width: 100%;
  padding: 10px;
  height: 120px;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  background: #fff;
}

.itemimg {
  width: 110px;
  height: 100%;
}

.detail {
  height: 100%;
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 14px;
  word-wrap: break-word;
}

.detail_panel {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.newprice {
  font-size: 12px;
  color: #f45852;
}

.quantity {
  font-size: 12px;
}
